<body>

	<nav class="navMenu  border">
		<a id="home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house" style="color: #722b3f;"></i> home</a>
		<a id="LGIRS" onclick="navigate(this.id)" href="#"> <i class="fa-regular fa-user" style="color: #722b3f;"></i> LGIRS</a>
		<a id="ux" onclick="navigate(this.id)" href="#"> <i class="fa-regular fa-pen-to-square" style="color: #722b3f;"></i> ux</a>
		<a id="wellness" onclick="navigate(this.id)" href="#"> <i class="fa-regular fa-heart" style="color: #722b3f;"></i> wellness</a>
		<a id="planners" onclick="navigate(this.id)" href="#"> <i class="fa-regular fa-calendar" style="color: #722b3f;"></i> planners</a>
		<a id="writing" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-pen-nib" style="color: #722b3f;"></i> writing</a>
		<a id="reading" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-book" style="color: #722b3f;"></i> reading</a>
		<a id="cinema" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-film" style="color: #722b3f;"></i> cinema</a>







	</nav>


	<script>

		let direction = "vertical";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://home.com", '_blank').focus();
			else if (id == 'LGIRS')
				window.open("https://LGIRS.com", '_blank').focus();
			else if (id == 'ux')
				window.open("https://ux.com", '_blank').focus();
			else if (id == 'wellness')
				window.open("https://wellness.com", '_blank').focus();
			else if (id == 'planners')
				window.open("https://planners.com", '_blank').focus();
			else if (id == 'writing')
				window.open("https://writing.com", '_blank').focus();
			else if (id == 'reading')
				window.open("https://reading.com", '_blank').focus();
			else if (id == 'cinema')
				window.open("https://cinema.com", '_blank').focus();

		}
	</script>


